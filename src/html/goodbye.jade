extend ./layout/indexLayout.jade

block content
  section.content.content--no-nav--big-header.u-text-center
    .u-full-size.u-center-vertically.content-box
      h1.main-title.u-text-center.u-italic
        | #{goodbye.title}
      h2.subtitle.u-text-center
        | #{goodbye.thanks}
      .content-text-box
        p.u-text-center
          | #{goodbye.shared}
        p.u-text-center
          | #{goodbye.commentedCode}
        a.content-link-centered(href='#{goodbye.githubLink}', target='_blank')=goodbye.githubLinkText
        p.u-text-center=goodbye.orCareers
        a.u-bottom-top-small-spacer(href=global.careersLink, target='_blank')
          | #{global.careersLinkText}
      a.btn.btn-raised.u-text-center(href='index.html')=goodbye.playAgain
